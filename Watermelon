import java.util.*;
public class Main{
public static void main(String[] args){
    Scanner sc=new Scanner(System.in);
    int w=sc.nextInt();
    print(w);
}
public static void print(int w){
    if(w>=4 && w%2==0){
        System.out.println("yes");
    }
    else{
        System.out.println("No");
    }
}
}
